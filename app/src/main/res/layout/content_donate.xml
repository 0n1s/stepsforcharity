<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_donate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.valentine.stepsforcharity.Donate"
    tools:showIn="@layout/activity_donate">

    <CheckBox
        android:text="Add an optional Ksh 500 tip \nto help StepForCharity grow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox"
        android:textColor="@color/Aquamarine"
        android:layout_below="@+id/editText"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:checked="true" />

    <Button
        android:text="CHECKOUT"
        android:textSize="20sp"
        android:background="@color/MediumSeaGreen"
        android:textColor="@color/White"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/button"
        android:layout_below="@+id/checkBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp" />

    <TextView
        android:text="DONATE TO \nBEYOND ZERO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Aquamarine"
        android:id="@+id/textView11"
        android:layout_marginTop="89dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="  Amount to donate"
        android:textColor="@color/White"
        android:ems="10"
        android:layout_marginTop="101dp"
        android:id="@+id/editText"
        android:layout_below="@+id/textView11"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="RUN"
        android:textColor="@color/White"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />
</RelativeLayout>

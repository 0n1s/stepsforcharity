        android:textColor="@color/white"
        android:id="@+id/steps"
        android:textSize="50dp"
        android:layout_marginTop="111dp"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/dist"
        android:layout_toEndOf="@+id/dist" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="STEPS DONE"
        android:textSize="25dp"
        android:id="@+id/textView3"
        android:textColor="@color/Aquamarine"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp"
        android:layout_below="@+id/cash"
        android:layout_alignRight="@+id/steps"
        android:layout_alignEnd="@+id/steps" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="34500"
        android:textColor="@color/white"
        android:id="@+id/cash"
        android:textSize="50dp"
        android:layout_alignBaseline="@+id/steps"
        android:layout_alignBottom="@+id/steps"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="KSH DONATED"
        android:textSize="25dp"
        android:id="@+id/textView4"
        android:textColor="@color/Aquamarine"
        android:layout_below="@+id/cash"
        android:layout_toLeftOf="@+id/textView2"
        android:layout_toStartOf="@+id/textView2" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/imageView2"
        android:src="@drawable/iconplay"
        android:background="@color/white"
        android:layout_marginTop="130dp"
        android:layout_below="@+id/textView4"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />

    <Button
        android:text="DONATE HERE"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textColor="@color/white"
        android:background="@color/MediumSeaGreen"
        android:textSize="25dp"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="119dp"
        android:id="@+id/btndonate" />


